{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "env": { "PYTHONPATH": "${workspaceRoot}"}
        },
        {
            "name": "Debug extract_strings_from_cplusplus.py with testStringBuilderFunction.c",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/extract_strings_from_cplusplus.py",
            "console": "integratedTerminal",
            "args": [
                "testData/generate_baseline/testStringBuilderFunction.c",
                "-v"
            ],
            "cwd": "${workspaceFolder}",
            "env": { "PYTHONPATH": "${workspaceFolder}"}
        },
        {
            "name": "Debug extract_strings_from_cplusplus.py (Custom Args)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/extract_strings_from_cplusplus.py",
            "console": "integratedTerminal",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": { "PYTHONPATH": "${workspaceFolder}"}
        }
    ]
}